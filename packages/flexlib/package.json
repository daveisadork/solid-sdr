{
  "name": "@repo/flexlib",
  "version": "0.0.0",
  "description": "A port of FlexRadio's FlexLib",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "files": [
    "LICENSE.md",
    "README.md",
    "lib/",
    "package.json"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch src",
    "dev:web": "tsdown --watch src",
    "dev:server": "tsdown --watch src",
    "format": "prettier .",
    "lint": "eslint . --max-warnings 0",
    "prepare": "husky",
    "test": "vitest",
    "tsc": "tsc"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "devDependencies": {
    "@eslint/js": "9.29.0",
    "@release-it/conventional-changelog": "10.0.1",
    "@types/node": "24.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "1.2.7",
    "console-fail-test": "0.5.0",
    "eslint": "9.29.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.1",
    "release-it": "19.0.3",
    "tsdown": "0.12.7",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.0",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20.19.0"
  },
  "publishConfig": {
    "provenance": true
  }
}
